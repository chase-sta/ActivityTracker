@model IEnumerable<ActivityTracker.Models.Activityt>

<div class="container">

    @if (Model.Count() > 0)
    {
        <h2>Activities</h2>

        <div class="container">
            <div class="row">
                <a class="btn btn-info col-2" asp-action="Create">Add a New Activity</a>
            </div>
        </div>
        <p></p>
        <table class="table">
            <tr class="table-secondary">
                <th>Name</th>
                <th>Date</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Name</td>
                    <td> @item.Date</td>
                </tr>
            }
        </table>
    }
    else
    {
        <h2> Uh Oh! </h2>
        <p> It looks like you have no activities added. Please add an activity to your table.</p>
        <a class="btn btn-info" asp-action="Create" asp-controller="Activityt">Add a New Activity</a>
    }
</div>