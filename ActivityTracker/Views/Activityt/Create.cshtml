@model ActivityTracker.Models.Activityt;

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="custom-text">Add New Activity</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label>Name</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Name" />
            </div>
            <span a class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Date</label>
            </div>
            <div class="col-6">
                <input class="form-control" type="date" asp-for="Date" />
            </div>
            <span class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to Activities List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


